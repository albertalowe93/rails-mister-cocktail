<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1><%= @cocktail.name  %></h1>
      <%= link_to "Delete", destroy_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>

      <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.image_url %>)">
      </div>

      <div class="container my-3">
        <div class="row">
          <div class="col-6">
              <h3>Ingredients: </h3>
                <p><% @cocktail.doses.each do |dose| %></p>
                <%= dose.description %>
                <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  %>
              <% end %>
          </div>
          <div class="col-6">
            <h3>Add new ingredients</h3>
              <%= simple_form_for [@cocktail, @dose] do |f| %>
              <%= f.association :ingredient %>
              <%= f.input :description %>
              <%= f.submit "Add Dose", class: "btn btn-primary my-2 " %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

