<%= render 'components/carousel' %>
<div class="container">
  <div class="row mt-5 justify-content-center">
    <h1>Cocktails of the Month</h1>
  </div>
  <div class="row justify-content-start mt-4">
    <% @cocktails.each do |cocktail|  %>
      <div class="col-4 my-2">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.picture, crop: :thumb, gravity: :face %>)">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    <% end  %>
  </div>
</div>
